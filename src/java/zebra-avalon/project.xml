	<build>
		<nagEmailAddress>matthew.norris@anite.com</nagEmailAddress>
		<sourceDirectory>src/java</sourceDirectory>
		<unitTestSourceDirectory>src/test</unitTestSourceDirectory>
		<unitTest>
			<includes>
				<include>**/*Test*.java</include>
			</includes>
			<excludes>
				<!-- Tests used in Unit Testing SystemTestRunner! -->
				<exclude>**/Always*Test.java</exclude>
				<exclude>**/*OFF*.java</exclude>
				<exclude>**/HibernateTestCase.java</exclude>
			</excludes>
			<resources> </resources>
		</unitTest>
		<resources>
			<resource>
				<directory>src/java</directory>
				<targetPath>/</targetPath>
				<includes>
					<include>**/*.xml</include>
				</includes>
			</resource>
		</resources>
